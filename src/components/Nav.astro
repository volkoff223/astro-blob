---
import ThemeChange from "./ThemeChange.astro";
const { current = "" } = Astro.props;
---

<script>
  document.querySelectorAll(".buttonContainer").forEach((el) => {
    function resetShake() {
      el.classList.remove("shake");
    }

    el.addEventListener("mouseover", () => {
      el.classList.add("shake");
      setTimeout(resetShake, 600);
    });
  });
</script>

<div id="nav-container">
  <a href="/" class="nav-logo selected"><img src="/BSNavLogo.png" /></a>

  <nav>
    <div class="buttonContainer">
      <a class={current === "work" ? "selected" : ""} href="/work">work</a>
    </div>
    <div class="buttonContainer">
      <a class={current === "resume" ? "selected" : ""} href="/resume">about</a>
    </div>
    <div class="buttonContainer">
      <a class={current === "articles" ? "selected" : ""} href="/articles"
        >articles</a
      >
    </div>
    <div class="buttonContainer">
      <a class={current === "contact" ? "selected" : ""} href="/contact"
        >contact</a
      >
    </div>
    <ThemeChange />
    <div class="icons">
      <a href="https://www.freecodecamp.org/volkoff223">
        <i class="fa fa-brands fa-free-code-camp"></i>
      </a>
      <a href="https://github.com/volkoff223">
        <i class="fa fa-brands fa-github"></i>
      </a>
      <a href="https://codepen.io/volkoff223">
        <i class="fa fa-brands fa-codepen"></i>
      </a>
    </div>
  </nav>
</div>

<style>
  .icons {
    display: flex;
    flex-direction: column;
  }
  .fa {
    margin: 10px 20px;
  }
  .fa:hover {
    opacity: 0.7;
  }
  nav {
    align-items: center;
    display: flex;
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  nav a {
    margin-right: 20px;
    min-width: 70px;
    white-space: nowrap;
  }

  .nav-logo > img {
    padding: 15px 20px;
  }

  .buttonContainer > a {
    padding: 20px 0px;
  }

  #nav-container {
    display: flex;
    justify-content: space-between;
  }

  #icon-img {
    height: 100px;
    align-items: flex-start;
    object-fit: cover;
  }

  a:not(.selected) {
    opacity: 0.7;
    font-weight: 400;
  }

  .shake {
    animation: 0.6s ease-in-out text-shadow;
  }

  @keyframes text-shadow {
    0% {
      transform: translateY(0);
    }

    20% {
      transform: translateY(-0.5em);
    }

    40% {
      transform: translateY(0.25em);
    }

    60% {
      transform: translateY(-0.125em);
    }

    80% {
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
