---
const { current = "" } = Astro.props;
---

<div id="nav-container">
  <a href="/" class="icon selected">
    <img src="../../logo.png" alt="" id="icon-img" />
  </a>
  <nav>
    <a class={current === "work" ? "selected" : ""} href="/work">my work</a>
    <a class={current === "resume" ? "selected" : ""} href="/resume">resume</a>
    <a class={current === "articles" ? "selected" : ""} href="/articles"
      >articles</a
    >
  </nav>
</div>

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-family: var(--font-family-sans);
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  nav a {
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left: 20px;
    min-width: 70px;
    text-align: center;
  }

  #nav-container {
    display: flex;
    background-color: var(--bg-color);
    padding: 10px;
  }

  #icon-img {
    width: 300px;
    align-items: flex-start;
    object-fit: cover;
  }

  a:not(.selected) {
    opacity: 0.7;
    font-weight: 400;
  }
</style>
