<style>
  .container {
    position: relative;
    height: 100px;
  }
  .phrase {
    position: absolute;
    top: 0;
    opacity: 0;
  }

  #one {
    animation: 5s 1 slidein;
  }
  #two {
    animation: 5s 1 slidein;
