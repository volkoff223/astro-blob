<script>
  let i: number = 0;

  let count = function () {
    let word = document.getElementById("words");
    if (i < 4) {
      word?.children[i].classList.add("rotating");
      i++;
    } else {
      word?.children[i].classList.add("lastRotation");
      word?.children[i].classList.add("visible");
    }
    setInterval(count, 3000);
  };
  count();
  // Call the count function every 3 sec
</script>

<div class="container">
  <div id="words">
    <span>A combat veteran owned small business.</span>
    <span>A user experience built to impress.</span>
    <!-- Dont remove this span. Its a hack. -->
    <span></span>
    <span>Web development driven by you.</span>
    <span>A web solutions company.</span>
  </div>
</div>

<style>
  span {
    opacity: 0;
    position: absolute;
  }

  #words {
    margin-bottom: 50px;
    right: 50px;
  }

  .visible {
    opacity: 1;
  }

  .rotating {
    animation: rotate 3s;
  }

  .lastRotation {
    animation: lastRotate 3s;
  }

  @keyframes rotate {
    0% {
      opacity: 0;
      transform: translate3d(0, 50px, 0);
    }
    20%,
    80% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
    100% {
      opacity: 0;
      transform: translate3d(0, -25, 0);
    }
  }

  @keyframes lastRotate {
    0% {
      opacity: 0;
      transform: translate3d(0, 50px, 0);
    }
    20%,
    100% {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
