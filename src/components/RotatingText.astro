    animation: 20s 1 finalSlidein;
    opacity: 1;
  }
  @keyframes slidein {
    0% {
      transform: translatex(-50px);
    }
    10% {
      opacity: 1;
    }
    20% {
      transform: translatex(0);
    }
    80% {
      opacity: 1;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(0.2);
    }
  }
  @keyframes finalSlidein {
    0% {
      opacity: 0;
    }
    75% {
      opacity: 0;
      transform: translatex(-50px);
    }
    80% {
      opacity: 1;
      transform: translate(0px);
    }
    100% {
      transform: translateY(0);
      transform: scaleY(1);
    }
  }
</style>
